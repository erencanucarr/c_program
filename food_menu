		   	  case 6: printf("Saturday: Kabak Dolmasi, Yogurt, Halka Tatlisi");
		   	  break;
		   	  case 7: printf("Sunday: Not Food.");
		   	  break;
		   	
                       default: printf("enter any number from 1 to 7");
		   }
		  	
	}
}
